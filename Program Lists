
%{
	#include<stdio.h>
%}

%%

int |float |char {printf("%s is a keyword\n ",yytext);}
[a-zA-Z][a-zA-Z|0-9]* {printf("%S is a identifier \n",yytext);}
[0-9]+ {printf("%s is digit of constant \n",yytext);}
[+ | - | * | /] {printf("%s is an operator \n",yytext);}
[@ |# |$ |&] {printf("%s is a special symobl \n",yytext);}
.|\n {ECHO;}
%%

int main()
{
	printf("Enter the String:\n");
	yylex();
}
int yywrap()
{
	return 1;
}







2.

%{

	#include<stdio.h>

	int Vow=0,Cons=0;

%}

%%

[\t\n]

[aeiouAEIOU] {printf(" is Vowel \n"); Vow++;}

[^aeiouAEIOU] {printf("This is Consonent \n"); Cons++;}

%%

int main()

{

	printf("Enter the String : \n");

	yylex();

	printf("Number of Vowel = %d and Number of Consonent = %d\n\n",Vow,Cons);

}

int yywrap()

{

	return 1;

}




